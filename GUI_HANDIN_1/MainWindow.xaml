<Window x:Class="GUI_HANDIN_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_HANDIN_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
       
    </Window.Resources>
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
    <ListView Grid.Row="0" Margin="10" Name="DebtorListView" ItemsSource="{Binding Debtors}">
        <ListView.ItemTemplate>
            
            <DataTemplate>
                <WrapPanel >
                    <TextBlock Text="{Binding Name}"/>
                    <TextBlock Text="{Binding TotalDebt}"></TextBlock>
                </WrapPanel>
            </DataTemplate>
            

        </ListView.ItemTemplate>
    </ListView>
        <Button Grid.Column="1" Name="AddDebtorButton" Content="Add Debtor" Margin="10,10"></Button>


    </Grid>
</Window>
