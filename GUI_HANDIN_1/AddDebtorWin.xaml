<Window x:Class="GUI_HANDIN_1.AddDebtorWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_HANDIN_1"
        mc:Ignorable="d"
        Title="Add Debtor" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel2/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBox Name="NameTextBox" Text="{Binding Debtor.Name }"></TextBox>
        <TextBox Grid.Row="1" Name="DebtTextBox" Text="{Binding InitialDebt }"></TextBox>
        <Button Grid.Row="2" x:Name="AddDebtorButton" Content="Add Debtor" Command="{Binding AddDebtorAndCloseCommand}"/>

    </Grid>
</Window>
